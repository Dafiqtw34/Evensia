<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.Chat">

    <RelativeLayout
        android:id="@+id/backG"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#272643">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chat"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="21sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backG"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/toko1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/toko1"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seruni Dress Bontique"
            android:layout_toRightOf="@id/toko1"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/thx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks kaa"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/toko1"
            android:layout_below="@id/text"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/thx"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey"
            android:id="@+id/gar"/>

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_navigation"
        android:background="@drawable/navbar"
        app:itemIconTint="@drawable/color_state"
        app:itemTextColor="@drawable/color_state"
        app:menu="@menu/button_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>