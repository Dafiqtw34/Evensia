<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context=".gedung.pesanan.pesan_gedung">

    <RelativeLayout
        android:id="@+id/backG"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#272643">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back"
            android:padding="10dp"
            android:text="Gedung"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backG">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backG"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/form"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gambar1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar3"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar4"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/biaya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <!--            <TextView-->
                    <!--                android:id="@+id/harga"-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:textColor="@color/black"-->
                    <!--                android:textSize="14sp"-->
                    <!--                android:layout_marginTop="10dp"-->
                    <!--                android:layout_alignParentEnd="true"-->
                    <!--                android:layout_marginEnd="20dp"/>-->

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Informasi Gedung"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/har"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Total Harga"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/luass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/har"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Luas"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/harga"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/luass"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Kapasitas"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/nilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/isi"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kap"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Jam Sewa"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nilai"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:text="12 Jam"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/waktu"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="No Telephone"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nomor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/jam"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/em"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/no"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Email"
                        android:textColor="@color/Gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nomor"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/al"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/em"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Alamat"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/gar"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/alamat"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gar"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Select your date here"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/calender" />

                    <RadioGroup
                        android:id="@+id/radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/calender">

                        <RadioButton
                            android:id="@+id/jam1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Pagi 08.00-11.00" />

                        <RadioButton
                            android:id="@+id/jam2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="7dp"
                            android:text="Malam 18.30-21.30" />
<!--                                        <RadioButton-->
<!--                                            android:layout_width="match_parent"-->
<!--                                            android:layout_height="wrap_content"-->
<!--                                            android:layout_marginTop="7dp"-->
<!--                                            android:layout_marginStart="20dp"-->
<!--                                            android:text="Malam 18.30-21.30"-->
<!--                                            android:id="@+id/jam3" />-->

                    </RadioGroup>

                    <View
                        android:id="@+id/garis"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/radio"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/info_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/garis"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Informasi Profile"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/info_profile"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Nama Pemesan"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nama"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/ema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Email"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ema"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:id="@+id/No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_user"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="No Telephone"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nomoruser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/No"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:inputType="phone" />

                    <TextView
                        android:id="@+id/Pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nomoruser"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Pembayaran"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Pembayaran"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Kartu Debit / Kredit"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/kartu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deb"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/kartu" />

                    <EditText
                        android:id="@+id/No_debit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/kartu"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:inputType="phone" />

                    <RadioButton
                        android:id="@+id/gopay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/No_debit"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Gopay" />

                    <CheckBox
                        android:id="@+id/syarat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gopay"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:text="Saya menyetujui Syarat dan Ketentuan dan Kebijakan Privasi yang berlaku"
                        android:textColor="#000" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/navbar">

                <Button
                    android:id="@+id/bayar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button"
                    android:text="Bayar"
                    android:textColor="#fff" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>