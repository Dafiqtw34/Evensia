<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context=".pesan_gedung">

    <RelativeLayout
        android:id="@+id/backG"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#272643">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back"
            android:padding="10dp"
            android:text="Gedung"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/form"
        android:orientation="vertical"
        android:layout_below="@+id/backG">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambar1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/gambar2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/gambar3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/gambar4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/biaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:text="Informasi Gedung"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/luass"
            android:textColor="@color/grey"
            android:layout_below="@+id/info"
            android:text="Luas"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/luass"
                android:layout_marginStart="20dp"
                android:text="Kapasitas"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/isi"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kap"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Jam Sewa"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jum"
                android:layout_alignParentEnd="true"
                android:text="12 Jam"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waktu"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/Gray"
                android:text="No Telephone"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jam"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/em"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/Gray"
                android:text="Email"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_hp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/em"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/grey"
                android:id="@+id/gar"/>

            <TextView
                android:id="@+id/ket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gar"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Tanggal pemesanan senin, 10 oktober 2020"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/ket"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/grey"
                android:id="@+id/garis"/>

            <TextView
                android:id="@+id/info_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Informasi Profile"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_profile"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Nama Pemesan"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/nama"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:inputType="textPersonName"
                android:id="@+id/name"/>

            <TextView
                android:id="@+id/ema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Email"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ema"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:inputType="textEmailAddress"
                android:id="@+id/email_user"/>

            <TextView
                android:id="@+id/No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_user"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="No Telephone"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/No"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:inputType="phone"
                android:id="@+id/No_telephone"/>

            <TextView
                android:id="@+id/Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/No_telephone"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Pembayaran"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Pembayaran"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Kartu Debit / Kredit"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/deb"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:inputType="phone"
                android:id="@+id/No_debit"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>