<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:orientation="vertical"
    tools:context=".gedung.review">

    <RelativeLayout
        android:id="@+id/backG"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#272643">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/back"
            android:padding="10dp"
            android:text="Gedung"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_below="@+id/backG">

        <RelativeLayout
            android:id="@+id/review"
            android:layout_width="380dp"
            android:layout_height="480dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/form">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="350dp"
                android:layout_height="230dp"
                android:layout_below="@+id/judul"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <HorizontalScrollView
                android:id="@+id/scGambar"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/judul"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gambar1"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar2"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar3"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/gambar4"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gambar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gambar"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <view
                android:id="@+id/garis"
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_below="@+id/alamat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/Textchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/luas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Textchat"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/luas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/luas1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kapasitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/luas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kap"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kapasitas"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dok"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/sewa"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_description_24" />

            <TextView
                android:id="@+id/ketentuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sewa"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/dok"
                android:text="Baca Ketentuan"
                android:textColor="@color/Gray"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>